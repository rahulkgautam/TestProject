        </div>
        <div>
            <label class="control-label">Disability</label>
            <label for="yes" class="control-label">Yes</label>
            <input type="checkbox" class="form-check-input" id="yes" />
            <label for="no" class="control-label">No</label>
            <input type="checkbox" class="form-check-input" id="no" />
        </div>
        <div>
            <label class="control-label">Disability</label>
            <label for="yes" class="control-label">Yes</label>
            <input type="radio" class="form-check-input" name="r" value="Customer" id="ryes" />
            <label for="no" class="control-label">No</label>
            <input type="radio" class="form-check-input" name="r" value="Admin" id="rno" />
        </div>
        <div>
            <button class="btn btn-primary" onclick="GetEmployee();" />Submit
        </div>
    </div>

</div>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>


<script>
    function ValidateDetails() {
        var firstName = $('#firstName').val();
        var lastName = $('#lastName').val();
        //get value for checkbox
        var checkBox = $("#yes")[0].checked;
        if (!firstName && !lastName)
            return alert("Please fill requireds Fields");
        var json = {};
        json["FirstName"] = firstName;
        json["LastName"] = lastName;
        json["Desibility"] = checkBox;
        SaveDetails(json);
    }
    function SaveDetails(json) {       
        var details = { 'details': json };
        $.ajax({
            type: "POST",
            url: "/Home/Save",
            data: details,
            success: function (response) {
                if (response)
                    alert("Successfully data saved");
            },
            error:function(error) {
                if (!error)
                    alert("Some error occured");
            }
        });
    }
