                    json['Id'] = 1;
                    //get value for radion btn
                    var r = $("input[name='r']:checked").val();
                    //set value for radion
                   $("[name=r]").val(["Customer"]);

                    var details = { 'details': json };
                    $.ajax({
                        type: "POST",
                        url: "/Home/GetEmployee",
                        data: details,
                        success: function (response) {
                            if (response.Desibility)//set value for Checkbox
                                $('#yes').attr("checked", true);
                        },
                        error: function (error) {
                            if (!error)
                                alert("Some error occured");
                        }
                    });
                }
</script>